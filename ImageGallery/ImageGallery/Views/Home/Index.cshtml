@model IEnumerable<ImageGallery.Utils.ImageMetadata>

@{
    ViewBag.Title = "Home Page";
}
<h2>Images in Gallery</h2>
<div class="row">
    @if (Model == null)
    {
        <h3>No images found/unable to fetch results</h3>
    }
    else
    {
        foreach (var item in Model)
        {
        <div class="col-md-4 clearfix">
            <div style="height:250px">
                <figure>
                    <img src="@item.BlobUri" class="thumbnail" style="width:150px; height:150px" />
                    <figcaption><h4>@item.Caption</h4></figcaption>
                    <div>Tagged By:@item.TaggedBy</div>
                </figure>
            </div>
            
        </div>
        }
    }

</div>