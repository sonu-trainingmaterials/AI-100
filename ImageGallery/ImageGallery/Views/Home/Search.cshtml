@model ImageGallery.Models.SearchModel

@{
     ViewBag.Title = "Search images";
}

<h2>Search Images</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SearchText)
            @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SearchText, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span>
            Search
        </button>
    </div>
    <div>
        @Html.Partial("_SearchResultView", Model)
    </div>
    
}
